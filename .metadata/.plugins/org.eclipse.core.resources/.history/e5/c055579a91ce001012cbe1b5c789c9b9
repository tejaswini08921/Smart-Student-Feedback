    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Initialize Charts when page loads
        document.addEventListener('DOMContentLoaded', function() {
            <c:if test="${not empty courseAnalytics}">
            // Course Ratings Chart (Bar Chart)
            const courseCtx = document.getElementById('courseRatingsChart');
            if (courseCtx) {
                const courseChart = new Chart(courseCtx.getContext('2d'), {
                    type: 'bar',
                    data: {
                        labels: [
                            <c:forEach var="course" items="${courseAnalytics}" varStatus="status">
                                '${course[0]}'<c:if test="${!status.last}">,</c:if>
                            </c:forEach>
                        ],
                        datasets: [{
                            label: 'Average Rating',
                            data: [
                                <c:forEach var="course" items="${courseAnalytics}" varStatus="status">
                                    ${course[1]}<c:if test="${!status.last}">,</c:if>
                                </c:forEach>
                            ],
                            backgroundColor: 'rgba(54, 162, 235, 0.8)',
                            borderColor: 'rgba(54, 162, 235, 1)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                max: 5,
                                title: {
                                    display: true,
                                    text: 'Rating (1-5)'
                                }
                            }
                        }
                    }
                });
            }
            </c:if>

            <c:if test="${not empty ratingDistribution}">
            // Rating Distribution Chart (Doughnut)
            const ratingCtx = document.getElementById('ratingDistributionChart');
            if (ratingCtx) {
                // Prepare rating distribution data
                const ratingData = [0, 0, 0, 0, 0]; // Initialize array for ratings 1-5
                <c:forEach var="dist" items="${ratingDistribution}">
                    ratingData[${dist[0]} - 1] = ${dist[1]};
                </c:forEach>
                
                const ratingChart = new Chart(ratingCtx.getContext('2d'), {
                    type: 'doughnut',
                    data: {
                        labels: ['1 Star', '2 Stars', '3 Stars', '4 Stars', '5 Stars'],
                        datasets: [{
                            data: ratingData,
                            backgroundColor: [
                                'rgba(220, 53, 69, 0.8)',    // 1 star - red
                                'rgba(253, 126, 20, 0.8)',   // 2 stars - orange
                                'rgba(255, 193, 7, 0.8)',    // 3 stars - yellow
                                'rgba(111, 66, 193, 0.8)',   // 4 stars - purple
                                'rgba(40, 167, 69, 0.8)'     // 5 stars - green
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'bottom'
                            }
                        }
                    }
                });
            }
            </c:if>

            <c:if test="${not empty instructorAnalytics}">
            // Instructor Performance Chart (Horizontal Bar)
            const instructorCtx = document.getElementById('instructorPerformanceChart');
            if (instructorCtx) {
                const instructorChart = new Chart(instructorCtx.getContext('2d'), {
                    type: 'bar',
                    data: {
                        labels: [
                            <c:forEach var="instructor" items="${instructorAnalytics}" varStatus="status">
                                '${instructor[0]}'<c:if test="${!status.last}">,</c:if>
                            </c:forEach>
                        ],
                        datasets: [{
                            label: 'Average Rating',
                            data: [
                                <c:forEach var="instructor" items="${instructorAnalytics}" varStatus="status">
                                    ${instructor[1]}<c:if test="${!status.last}">,</c:if>
                                </c:forEach>
                            ],
                            backgroundColor: 'rgba(153, 102, 255, 0.8)',
                            borderColor: 'rgba(153, 102, 255, 1)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        indexAxis: 'y',
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            x: {
                                beginAtZero: true,
                                max: 5,
                                title: {
                                    display: true,
                                    text: 'Rating (1-5)'
                                }
                            }
                        }
                    }
                });
            }
            </c:if>
        });
    </script>
