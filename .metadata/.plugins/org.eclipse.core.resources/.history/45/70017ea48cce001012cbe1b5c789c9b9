    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Initialize Charts when page loads
        document.addEventListener('DOMContentLoaded', function() {
            // Course Ratings Chart (Bar Chart)
            const courseCtx = document.getElementById('courseRatingsChart').getContext('2d');
            const courseChart = new Chart(courseCtx, {
                type: 'bar',
                data: {
                    labels: [
                        <c:forEach var="course" items="${courseAnalytics}">
                            '${course[0]}',
                        </c:forEach>
                    ],
                    datasets: [{
                        label: 'Average Rating',
                        data: [
                            <c:forEach var="course" items="${courseAnalytics}">
                                ${course[1]},
                            </c:forEach>
                        ],
                        backgroundColor: 'rgba(54, 162, 235, 0.8)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 5,
                            title: {
                                display: true,
                                text: 'Rating (1-5)'
                            }
                        }
                    }
                }
            });

            // Rating Distribution Chart (Doughnut)
            const ratingCtx = document.getElementById('ratingDistributionChart').getContext('2d');
            const ratingChart = new Chart(ratingCtx, {
                type: 'doughnut',
                data: {
                    labels: ['5 Stars', '4 Stars', '3 Stars', '2 Stars', '1 Star'],
                    datasets: [{
                        data: [
                            <c:forEach var="dist" items="${ratingDistribution}">
                                ${dist[1]},
                            </c:forEach>
                        ],
                        backgroundColor: [
                            'rgba(40, 167, 69, 0.8)',
                            'rgba(111, 66, 193, 0.8)',
                            'rgba(255, 193, 7, 0.8)',
                            'rgba(253, 126, 20, 0.8)',
                            'rgba(220, 53, 69, 0.8)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });

            // Instructor Performance Chart (Horizontal Bar)
            const instructorCtx = document.getElementById('instructorPerformanceChart').getContext('2d');
            const instructorChart = new Chart(instructorCtx, {
                type: 'bar',
                data: {
                    labels: [
                        <c:forEach var="instructor" items="${instructorAnalytics}">
                            '${instructor[0]}',
                        </c:forEach>
                    ],
                    datasets: [{
                        label: 'Average Rating',
                        data: [
                            <c:forEach var="instructor" items="${instructorAnalytics}">
                                ${instructor[1]},
                            </c:forEach>
                        ],
                        backgroundColor: 'rgba(153, 102, 255, 0.8)',
                        borderColor: 'rgba(153, 102, 255, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    scales: {
                        x: {
                            beginAtZero: true,
                            max: 5,
                            title: {
                                display: true,
                                text: 'Rating (1-5)'
                            }
                        }
                    }
                }
            });
        });
    </script>
